<!DOCTYPE html>
<html lang="en">
<head>
    <title>Schedule Interview</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        header {
          background-color: rgba(51, 51, 51, 0.7);
                padding: 10px;
                color: white;
            }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        nav a {
          color: rgb(13, 13, 13);
          text-decoration: none;
          margin-right: 15px;
      }

        nav form {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        div {
            margin: 20px;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h3 {
            color: #333;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        label {
            margin-bottom: 8px;
            color: #555;
        }

        select, input[type="text"], input[type="date"] {
            width: 100%;
            padding: 8px;
            margin-bottom: 16px;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        button {
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <header>
        <% if (locals.user) { %>
        <nav>
            <div>
                <a href="/">Home</a>
            </div>
            <form>
                <a href="/company/home">Interview</a>
                <a href="/users/download-csv">Download</a>
                <a href="/users/signout">Sign out</a>
            </form>
        </nav>
        <% } %>
    </header>
    <div>
        <form action="/company/schedule-interview" method="post">
            <h3>Schedule Interview</h3>

            <div>
                <label for="name">Name</label>
                <select aria-label="Default select example" name="id" id="name">
                    <option selected disabled>Select Student</option>

                    <%for(let student of students){%>
                    <option value="<%=student.id%>"><%= student.name %></option>
                    <%}%>
                </select>
            </div>

            <div>
                <label for="company">Company</label>
                <input type="text" name="company" required/>
            </div>

            <div>
                <label for="date">Date</label>
                <input type="date" name="date" required/>
            </div>

            <button>
                Schedule Interview
            </button>
        </form>
    </div>
</body>
</html>
